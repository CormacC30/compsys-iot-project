{{> menu active="dashboard"}}

<section class="section">
  <h1 class="title has-text-centered">Your Mould-O-Matic Dashboard</h1>

    <div id="temperature">
        <p>Temperature: {{ temperature }}</p>
    </div>
    <div id="humidity">
        <p>Humidity: {{ humidity }}</p>
    </div>
    <div id="airQuality">
        <p>Air Quality Index: {{ airQuality }}</p>
    </div>
    <div id="moisture">
        <p>moisture: {{ moisture }}</p>
    </div>
    <div id="ambientLight">
        <p>ambientLight: {{ ambientLight }}</p>
    </div>
    <div>
        <p>dehu status: {{ dehumidifierStatus }}</p>
    </div>
    <!-- Add a form for the button with a hidden input field -->
<form action="/updateDehumidifier" method="POST">
  <button type="submit" class="button {{#if dehumidifierStatus}}is-danger{{else}}is-success{{/if}}">
    {{#if dehumidifierStatus}}Turn Off Dehumidifier{{else}}Turn On Dehumidifier{{/if}}
  </button>
</form>
<div class="columns">
    <div class="column">
        <iframe width="450" height="260" style="border: 1px solid #cccccc;" src="https://thingspeak.com/channels/2378087/charts/1?bgcolor=%23edd8c7&color=%23d62020&results=1000&title=Temperature&yaxis=%C2%B0C"></iframe>
        <iframe width="450" height="260" style="border: 1px solid #cccccc;" src="https://thingspeak.com/channels/2378087/charts/2?bgcolor=%23ceedc7&color=%23d62020&results=1000&title=Humidity&yaxis=%25+RH"></iframe>
    </div>
    <div class="column">
        <iframe width="450" height="260" style="border: 1px solid #cccccc;" src="https://thingspeak.com/channels/2378087/charts/4?bgcolor=%23c7eaed&color=%23d62020&results=1000&title=Air+Quality&yaxis=Air+Quality+Index"></iframe>
        <iframe width="450" height="260" style="border: 1px solid #cccccc;" src="https://thingspeak.com/channels/2378087/charts/5?bgcolor=%23faf8a5&color=%23d62020&results=60"></iframe>
        <iframe width="450" height="260" style="border: 1px solid #cccccc;" src="https://thingspeak.com/channels/2378087/charts/3?bgcolor=%23ffffff&color=%23d62020&results=1000"></iframe>
    </div>
</div>

</section>
